{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>NOVO ARTIGO:</h3>
<div class="card">
  <div class="card-body">
    <form class="" action="/painel/artigos/novo" method="POST">
      <label for="titulo">Título:</label>
      <input type="text" id="titulo" name="titulo" placeholder="Título do artigo" class="form-control"></input>
      <br>
      <label for="slug">Slug: </label>
      <input type="text" id="slug" name="slug" placeholder="Link Único" class="form-control"></input>
      <br>
      <label for="descricao">Descrição: </label>
      <input type="text" id="descricao" name="descricao" placeholder="Informação resumida" class="form-control"></input>
      <br>
      <label for="corpo">Corpo: </label>
      <textarea id="corpo" name="conteudo" placeholder="Escreva aqui o seu artigo" class="form-control"></textarea>
      <br>
      <label for="categoria">Categoria: </label>
      <select name="categoria" class="custom-select">
        {{#each categoria}}
          <option value="{{_id}}">{{nome}}</option>
        {{else}}
          <option value="0">--</option>
        {{/each}}
      </select>
      <br><br>
      <button class="btn btn-success">Criar</button>
    </form>
  </div>
</div>
