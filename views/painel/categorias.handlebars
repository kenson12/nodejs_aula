<h2>Lista de categorias</h2>
<hr>
<a href="/painel/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>
<br><br>
{{#each categorias}}
  <div class="card">
    <div class="card-body">
      <b>{{nome}}</b><br>
      <small>link: {{slug}}</small><br>
      <small>Data de criação: {{date}}</small><br><br>
      <a href="/painel/categorias/edit/{{_id}}"><button class="btn btn-success">Editar</button></a>
      <form action="/painel/categorias/deletar" method="POST">
        <input name="id" type="hidden" value="{{_id}}">
        <button type="submit" class="btn btn-danger mt-2">Deletar</button>
      </form>
    </div>
  </div>
  <br>
{{else}}
  <h5 class="mt-4" style="opacity:0.5;">Nenhuma categoria cadastrada</h5>
{{/each}}
