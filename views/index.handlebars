<p>Bem vindo!</p>

<hr>
<h2>Últimos Artigos</h2>
{{#each artigos}}
  <div class="card">
    <div class="card-body">
      <h4>{{titulo}}</h4>
      <small>{{data}} | <a href="/categoria/{{categoria.slug}}/artigos">{{categoria.nome}}</a></small>
      <hr>
      <small>Descrição: {{descricao}}</small><br><br>
      <a href="/artigo/{{slug}}">Leia mais</a>
    </div>
  </div>
  <br>
{{else}}
  <h5 class="mt-4" style="opacity:0.5;">Nenhum Artigo cadastrado</h5>
{{/each}}
